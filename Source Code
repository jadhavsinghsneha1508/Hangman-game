import random
from collections import Counter

someWords = '''apple banana mango strawberry orange grape pineapple apricot 
lemon coconut watermelon cherry papaya berry peach lychee muskmelon'''

words = someWords.split()
word = random.choice(words)  # Pick a random fruit

if __name__ == '__main__':
    print('Guess the word! HINT: It\'s a name of a fruit\n')
    
    
    for _ in word:
        print('_', end=' ')
    print('\n')

    chances = len(word) + 2
    guessed_letters = ''
    correct_guesses = 0

    while chances > 0:
        print(f"Chances left: {chances}")
        guess = input("Enter a letter: ").lower()

        
        if not guess.isalpha() or len(guess) != 1:
            print("Please enter a single letter only!\n")
            continue
        if guess in guessed_letters:
            print("You already guessed that letter!\n")
            continue

        guessed_letters += guess

        if guess in word:
            print(f"Good guess! '{guess}' is in the word.\n")
        else:
            chances -= 1
            print(f"Wrong! '{guess}' is not in the word.\n")

        
        for letter in word:
            if letter in guessed_letters:
                print(letter, end=' ')
                correct_guesses += 1 if guessed_letters.count(letter) <= word.count(letter) else 0
            else:
                print('_', end=' ')
        print('\n')

        
        if all(letter in guessed_letters for letter in word):
            print("Congratulations! You won!")
            print(f"The word was: {word.upper()}")
            break

        correct_guesses = 0  # Reset counter

    else:
        print("You lost! Out of chances.")
        print(f"The word was: {word.upper()}")


No bugs, clean output, fun to play! Enjoy!
